{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "esnext",
		"module": "ES2022",
		"moduleResolution": "Node",
		"rootDir": "../../../",
		"baseUrl": "../../../",
		"noEmit": true,
		"outDir": "scripts/",
		"noUnusedLocals": true,
		"strict": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"ESNext"
		],
	},
	"include": [
		"./**/*.ts",
		// don't include .d.ts files from some submodules / libraries
		"../**/*.d.ts" 
	],
	"exclude": [
		"node_modules/**/*",
		"scripts_files/**/*",
		"../wrapper-sdk/*"
	]
}